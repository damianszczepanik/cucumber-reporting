<!DOCTYPE html>
<html>
<head>
  #parse("/templates/headers.vm")
  #includeTitle("Feature: $feature.getName()")
</head>
<body>

#includeNavigation()

#includeReportInfo()

#includeLead("Feature Report")

#includeReportTable("Feature", $feature, $parallel)

#includeExpandingButtons()

<div class="container-fluid" id="report">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="feature">
        <span style="font-size: 24px"><i class="fa fa-video-camera"></i><b> Feature: $feature.getName()</b></span></br>
        <span style="font-size: 16px; color:#6b788a"><i class="fa fa-edit"></i><b> Uri: </b>$feature.getUri()</span>
        #includeTags($feature.getTags())
        #includeBrief($feature.getKeyword(), $feature.getStatus(), $feature.getName())
        <div class="description indention">$feature.getDescription()</div>
        <div class="elements inner-level">
          #foreach($element in $feature.getElements())
            <br/>
            <span style="font-size: 19px"><i class="fa fa-film"></i><b> Scenario: </b>$element.getName()</span></br>
            #includeElement($element, false)
          #end
        </div>

      </div>
    </div>
  </div>
</div>

#includeExpandingButtons()
<br/>

#include("/templates/footer.vm")

</body>
</html>
