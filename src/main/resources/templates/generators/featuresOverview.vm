<!DOCTYPE html>
<html>
<head>
  #parse("/templates/headers.vm")
  #includeTitle("Features Overview")

  <script type="text/javascript">
  $(function () {
    var anim_time_ms = 300;

    $('#steps_chart').highcharts({
        chart: {
            type: 'pie',
            options3d: {
                enabled: true,
                alpha: 45,
                beta: 0
            },
            animation: {duration: anim_time_ms}
        },
        title: {
            text: 'Steps',
            y: 50,
            style: {
                fontWeight: 'bold',
                fontSize: 'large'
            }
        },
        tooltip: {
            style: {
                fontWeight: 'bold',
                color: 'darkcyan'
            }
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                depth: 35,
                dataLabels: {
                    enabled: true,
                    distance: 15,
                    format: '<b>{point.name}</b>:<br>{point.percentage:.2f} %',
                    style: {
                        fontWeight: 'bold',
                        color: 'indigo'
                    }
                }
            },
            series: {
                animation: {duration: anim_time_ms}
            }
        },
        series: [{
            name: 'Steps',
            data: [
                {
                    selected: true,
                    sliced: true,
                    name: 'Passed',
                    color: "#00B000",
                    y: $report_summary.getPassedSteps()
                },
                {
                    name: 'Failed',
                    color: "#FF3030",
                    y: $report_summary.getFailedSteps()
                },
                {
                    name: 'Skipped',
                    color: "#88AAFF",
                    y: $report_summary.getSkippedSteps()
                },
                {
                    name: 'Undefined',
                    color: "#FBB957",
                    y: $report_summary.getUndefinedSteps()
                },
                {
                    name: 'Missing',
                    color: "#FBB9A7",
                    y: $report_summary.getMissingSteps()
                },
                {
                    name: 'Pending',
                    color: "#FFFF33",
                    y: $report_summary.getPendingSteps()
                }
            ]
        }]
    });


    $('#scenarios_chart').highcharts({
        chart: {
            type: 'pie',
            options3d: {
                enabled: true,
                alpha: 45
            },
            animation: {duration: anim_time_ms}
        },
        title: {
            text: 'Scenarios',
            y: 50,
            style: {
                fontWeight: 'bold',
                fontSize: 'large'
            }
        },
        tooltip: {
            style: {
                fontWeight: 'bold',
                color: 'darkcyan'
            }
        },
        plotOptions: {
            pie: {
                innerSize: '70%',
                depth: 35,
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    distance: 15,
                    format: '<b>{point.name}</b>:<br>{point.percentage:.2f} %',
                    style: {
                        fontWeight: 'bold',
                        color: 'indigo'
                    }
                }
            },
            series: {
                animation: {duration: anim_time_ms}
            }
        },
        series: [{
            name: 'Scenarios',
            data: [
                {
                    name: 'Passed',
                    y: $report_summary.getPassedScenarios(),
                    color: "#00B000"
                },
                {
                    selected: true,
                    sliced: true,
                    name: 'Failed',
                    y: $report_summary.getFailedScenarios(),
                    color: "#FF3030"
                }
            ]
        }]
    });


    $('#features_chart').highcharts({
        chart: {
            type: 'pie',
            plotShadow: false,
            animation: {duration: anim_time_ms}
        },
        title: {
            text: 'Features',
            y: 50,
            style: {
                fontWeight: 'bold',
                fontSize: 'large'
            }
        },
        tooltip: {
            style: {
                fontWeight: 'bold',
                color: 'darkcyan'
            }
        },
        plotOptions: {
            pie: {
                dataLabels: {
                    enabled: true,
                    distance: 15,
                    format: '<b>{point.name}</b>:<br>{point.percentage:.2f} %',
                    style: {
                        fontWeight: 'bold',
                        color: 'indigo'
                    }
                },
                startAngle: -90,
                endAngle: 90,
                center: ['50%', '75%']
            },
            series: {
                animation: {duration: anim_time_ms}
            }
        },
        series: [{
            type: 'pie',
            name: 'Features',
            innerSize: '50%',
            data: [
                {
                    name: 'Passed',
                    y: $all_features_passed,
                    color: "#00B000"
                },
                {
                    selected: true,
                    sliced: true,
                    name: 'Failed',
                    y: $all_features_failed,
                    color: "#FF3030"
                }
            ]
        }]
    });
  });
  </script>
</head>

<body>

#includeNavigation("features")

#includeBuildInfo()

#includeLead("Features Statistics", "The following graphs show passing and failing statistics for features")


#if(!$all_features.isEmpty())
  <div class="container-fluid" id="charts">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div id="featureChartCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#featureChartCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#featureChartCarousel" data-slide-to="1"></li>
            <li data-target="#featureChartCarousel" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <div id="steps_chart"></div>
            </div>

            <div class="item">
              <div id="scenarios_chart"></div>
            </div>

            <div class="item">
              <div id="features_chart"></div>
            </div>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#featureChartCarousel" role="button" data-slide="prev"></span>
            &lt;
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#featureChartCarousel" role="button" data-slide="next">
            &gt;
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
  <br>
#end


<div class="container-fluid" id="summary">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      #if($all_features.isEmpty())
        <p>You have no features in your cucumber report</p>
      #else
        #includeStatsTable("Feature", $parallel, $all_features, $report_summary)
      #end
    </div>
  </div>
</div>

#include("/templates/footer.html")

</body>
</html>
